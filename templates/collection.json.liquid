{% layout none %}

{
    "title" : "{{ collection.title}}",
    "totalproducts" : "{{ collection.all_products_count }}",
    "products" : [
        {% for product in collection.products %}
            {
                "title" : "{{ product.title}}",
                "decription" : "{{product.description}}",
                "price" : "{{product.price}}"
            }
            {% unless forloop.last %},{% endunless %}
        {% endfor %}
    ]
}