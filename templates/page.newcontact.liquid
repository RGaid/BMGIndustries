<div class="contactus grid ">
  <div class="grid__item two-thirds medium--one-whole small--one-whole padding80 contactusform">
    <h1 class="contactustitle">{{ page.title }}</h1>
    <p class="space10"> 
      Have a question or comment?  Send us a message using the form below and one of our dedicated customer service experts will get back to you within 24 hours!  If you need help immediately, please give us a call or chat with us during business hours.
    </p>
    
     {% form 'contact' %}

        {% if form.posted_successfully? %}
          <p class="form-success">
            {{ 'contact.form.post_success' | t }}
          </p>
        {% endif %}

        {{ form.errors | default_errors }}

        <div class="grid">
          <div class="grid__item wide--one-half medium--one-half small--one-whole" style="padding: 0px 5px;">
            <label for="ContactFormFirstname" class="label--hidden">First Name</label>
            <input type="text" id="ContactFormFirstName" name="contact[firstname]" placeholder="First Name" value="{% if form[firstname] %}{{ form[firstname] }}{% endif %}">
          </div>
          <div class="grid__item wide--one-half medium--one-half small--one-whole" style="padding: 0px 5px;">
            <label for="ContactFormLastname" class="label--hidden">Last Name</label>
            <input type="text" id="ContactFormLastName" name="contact[lastname]" placeholder="Last Name" value="{% if form[lastname] %}{{ form[lastname] }}{% endif %}">
          </div>
        </div>
    
      <div class="grid ">
          <div class="grid__item wide--one-half medium--one-half small--one-whole" style="padding: 0px 5px;">
            <label for="ContactFormPhone" class="label--hidden">{{ 'contact.form.phone' | t }}</label>
            <input type="tel" id="ContactFormPhone" name="contact[phone]" placeholder="{{ 'contact.form.phone' | t }}" pattern="[0-9\-]*" value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}">
      </div>
          <div class="grid__item wide--one-half medium--one-half small--one-whole" style="padding: 0px 5px;">
            <label for="ContactFormEmail" class="label--hidden">{{ 'contact.form.email' | t }}</label>
            <input type="email" id="ContactFormEmail" name="contact[email]" placeholder="{{ 'contact.form.email' | t }}" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">
          </div>
        </div>

        <div  style="padding: 0px 5px;">
          <label for="ContactFormMessage" class="label--hidden">{{ 'contact.form.message' | t }}</label>
          <textarea rows="10" id="ContactFormMessage" name="contact[body]" placeholder="{{ 'contact.form.message' | t }}">{% if form.body %}{{ form.body }}{% endif %}</textarea>
      </div>
        <input type="submit" class="btn" value="{{ 'contact.form.send' | t }}">
      {% endform %}
  </div>
  <div class="grid__item one-third medium--one-whole small--one-whole padding80">
    <div class="rte contactuscontent">
      {{ page.content }}
    </div>
  </div>
</div>