<div class="grid usraccount ">
  <div class="grid__item acntnav one-quarter rightalign medium--hide small--hide">
    {% include 'account_nav' with currpage: '/account' %}
  </div>
  <div class="grid__item post-large--hide wide--hide medium--one-whole small--one-whole centeralign">
    {% include 'account_nav_mobile' with currpage: '/account' %}
  </div>
  <div class="grid__item three-quarters medium--one-whole small--one-whole">
    <div class="centercontent">
      <h1 >{{ 'customer.order.title' | t: name: order.name }}</h1>
      {% if order.cancelled %}
        {%- assign cancelled_at = order.cancelled_at | date: "%B %d, %Y %I:%M%p" -%}
        <p>{{ 'customer.order.cancelled' | t: date: cancelled_at }}</p>
        <p>{{ 'customer.order.cancelled_reason' | t: reason: order.cancel_reason }}</p>
      {% endif %}

      <table class="responsive-table ordertabl">
        <thead>
          <tr>
            <th>{{ 'customer.order.product' | t }}</th>
            <th>{{ 'customer.order.price' | t }}</th>
            <th>{{ 'customer.order.quantity' | t }}</th>
            <th>{{ 'customer.order.total' | t }}</th>
          </tr>
        </thead>
        <tbody>
          {% for line_item in order.line_items %}
            <tr id="{{ line_item.key }}" class="responsive-table-row">
              <td data-label="{{ 'customer.order.product' | t }}">
                {{ line_item.title | link_to: line_item.product.url }}
                {% if line_item.fulfillment %}
                  <dl>
                    <dt>{{ 'customer.order.fulfilled_at' | t }} &nbsp;{{ line_item.fulfillment.created_at | date: '%d/%m/%y' }}</dt>
                  </dl>
                {% endif %}
              </td>
              <td data-label="{{ 'customer.order.price' | t }}">{{ line_item.price | money }}</td>
              <td data-label="{{ 'customer.order.quantity' | t }}">{{ line_item.quantity }}</td>
              <td data-label="{{ 'customer.order.total' | t }}">{{ line_item.quantity | times: line_item.price | money }}</td>
            </tr>
          {% endfor %}
        </tbody>
        <tfoot>
          <tr class="responsive-table-row">
            <td colspan="3" class="small--hide footlabels">{{ 'customer.order.subtotal' | t }}</td>
            <td data-label="{{ 'customer.order.subtotal' | t }}">{{ order.subtotal_price | money }}</td>
          </tr>

          {% for discount in order.discounts %}
            <tr>
              <td colspan="3" class="small--hide footlabels">{{ discount.code }} {{ 'customer.order.discount' | t }}</td>
              <td data-label="{{ 'customer.order.discount' | t }}">{{ discount.savings | money }}</td>
            </tr>
          {% endfor %}

          {% for shipping_method in order.shipping_methods %}
            <tr>
              <td colspan="3" class="small--hide footlabels">{{ 'customer.order.shipping' | t }} ({{ shipping_method.title }})</td>
              <td data-label="{{ 'customer.order.shipping' | t }} ({{ shipping_method.title }})">{{ shipping_method.price | money }}</td>
            </tr>
          {% endfor %}

          {% for tax_line in order.tax_lines %}
            <tr>
              <td colspan="3" class="small--hide footlabels">{{ 'customer.order.tax' | t }} ({{ tax_line.title }} {{ tax_line.rate | times: 100 }}%)</td>
              <td data-label="{{ 'customer.order.tax' | t }} ({{ tax_line.title }} {{ tax_line.rate | times: 100 }}%)">{{ tax_line.price | money }}</td>
            </tr>
          {% endfor %}

          <tr>
            <td colspan="3" class="small--hide footlabels">{{ 'customer.order.total' | t }}</td>
            <td data-label="{{ 'customer.order.total' | t }}">{{ order.total_price | money }} {{ order.currency }}</td>
          </tr>
        </tfoot>
      </table>

      <div class="rightalign">
        <h3>{{ 'customer.order.billing_address' | t }}</h3>
        {{ order.billing_address | format_address }}
        <p>{{ 'customer.order.payment_status' | t }}: {{ order.financial_status_label }}</p>

        {%if order.billing_address!=order.shipping_address%}
          <h3>{{ 'customer.order.shipping_address' | t }}</h3>
          {{ order.shipping_address | format_address }}
          <p>{{ 'customer.order.fulfillment_status' | t }}: {{ order.fulfillment_status_label }}</p>
        {%endif%}
      </div>
      <div class="leftalign">
        <a class="backlink" href="/account">back to my orders</a>
      </div>
    </div>
  </div>
  <div class="grid__item post-large--hide wide--hide medium--one-whole small--one-whole">
    <div class="navcontents bottominfo">
      {% include 'contactinfo' %}
    </div>
  </div>
</div>