    {{'jquery.crs.min.js' | asset_url | script_tag}}
  {% endif %}
  
</head>

	<body>

		{% section 'bmg_header' %}
				
		<div id="PageContainer" class="is-moved-by-drawer">
        		{% if template == 'index' %}
        		{% section 'slider' %}
        		{% endif %} 

        		{% if template contains 'product'%}
        			 <div class="section-header section-header--breadcrumb">
                {% include 'breadcrumb' %}
              </div>
        		{% endif %} 

        		<main class="wrapper main-content xcentercontent" role="main" >
        			<div class="grid">
        					{{ content_for_layout }}
        			</div>
        		</main>

    {% section 'bmg_footer' %}

		</div>

		<a href="#" class="scrollup" style="display: inline;"><i class="fa fa-angle-up" aria-hidden="true"></i> TOP</a>

		{% include '__opt-js-theme' %}

		{{ js_content_for_header_defer | strip_newlines }}
		
		 {%include 'prod_sliders'%}
    {% include 'atc-popup'%}

    {% comment %}
    {% if template != 'page.newdealer' and template != 'customers/activate_account' and template != 'customers/reset_password'%}
       {% if customer%}
       {% else %}
              <div id="myModal" class="modal" style="display: block">
                <div class='modal-content-login'>
                    <div class="padding20">
                      {% include 'login_content'%}
                    </div>
                  </div>
              </div>
       {% endif %}
     {% endif %}
     {% endcomment %}

	</body>
