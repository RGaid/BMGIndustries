<div class="bmg_header">
    <div class="container">
        <div class="row bmg_h_top">
            <div class="col-md-6">
                <a href="#">
                    Why Choose BMG
                </a>
                <a href="tel:1-800-964-2029" class="bgm_h_icon">
                    <img src="">
                    1-800-964-2029
                </a>
            </div>
            <div class="col-md-6">
                <a href="#">
                    Digital Catalogue
                </a>
                <a href="#">
                    Order Status
                </a>
                <a href="#">
                    My Account
                </a>
                <a href="#">
                    Sign In
                </a>
            </div>
        </div>
        <div class="row bmg_h_main">
            <div class="col-md-8 bmgh_m_logo_search">
                <a href="/"> 
                    <img src="{{ section.settings.logo | img_url: 'master' }}">
                </a>
                <div class="bmgh_search_form">
                    {% include 'search-bar'  %}
                </div>
            </div>
            <div class="col-md-4">
                <div class="bmgh_m_icons">
                    <ul>
                        <li>
                            <a href="#">
                                <img src="">
                                Reorder
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <img src="">
                                Order by Item No.
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <img src="">
                                Cart
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row bmg_h_nav">
            <div class="col-md-12">

            </div>
        </div>
    </div>
</div>

{% schema %}
  {
    "name": "BMG Header",
    "settings": [
        {
            "type": "image_picker",
            "id": "logo",
            "label": "BMG Logo"
        }
    ], 
    "presets": [
      {
        "name": "BMG Header",
        "category": "2021 - BMG"
      } 
    ]
  }
{% endschema %}