<div class="bmg_banner" style="background-image: url({{ section.settings.background_image | img_url: 'master' }})">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="bmg_banner_body">
                    <h1>{{ section.settings.heading }}</h1>
                    <p>{{ section.settings.banner_desc }}</p>
                    <a href="{{ section.settings.banner_button_url }}" class="bmg_button">{{ section.settings.banner_button_text }}</a>
                </div>
            </div>
        </div>
    </div>
</div>

{% schema %}
  {
    "name": "BMG Banner",
    "settings": [
        {
            "type": "image_picker",
            "id": "background_image",
            "label": "BMG Background Image"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Header Heading"
        },
        {
            "type": "textarea",
            "id": "banner_desc",
            "label": "Header Paragraph"
        },
        {
            "type": "text",
            "id": "banner_button_text",
            "label": "Header Button Text"
        },
        {
            "type": "url",
            "id": "banner_button_url",
            "label": "Header Button Url"
        },
    ],
    "presets": [
      {
        "name": "BMG Banner",
        "category": "2021 - BMG"
      } 
    ]
  }
{% endschema %}