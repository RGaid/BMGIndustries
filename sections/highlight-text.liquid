<div class="page-width highlight_text">
  
  
<dl class="highlight_accordion">
    <dt>
      <div class="highlight_title">{{ section.settings.highlight_title }}</div>
      {% if section.settings.hideexpandarea %}      
      {% else %}
      <i class="accordion_icon fa fa-plus"></i>
      {% endif %}      
      <div class="highlight_introduction">{{ section.settings.highlight_text }}</div>
    </dt>
    <dd class="highlight_content">{{ pages[section.settings.selectedpage].content }}</dd>
</dl>
   
</div>


   <script>
  jQuery(document).ready( function() { 
	 jQuery('.highlight_accordion dt').click(function() {
     	jQuery(this).find('i').toggleClass('fa-plus fa-minus').closest('dt').next()
     .slideToggle().siblings('.highlight_content').slideUp();
});

jQuery('.highlight_content').hide();

    
    
  }); //end documentready
  </script>

{% schema %}
  {
    "name": "Highlight Text",
    "class": "index-section",
    "settings": [
      {
        "type": "text",
        "id": "highlight_title",
        "label": "Highlight Title",
        "default": "Short and simple"
      },
      {
        "type": "textarea",
        "id": "highlight_text",
        "label": "Highlight Text",
        "default": "<p>Use HTML to format your text so it can be easily read. This text can be used to share information about your brand with customers.</p>"
      },{
        "type": "page",
        "id": "selectedpage",
        "label": "Page content to display when extend"
      },{
        "type": "checkbox",
        "id": "hideexpandarea",
        "label": "hide expand symbol"
      }
    ],
    "presets": [
      {
        "name": "Highlight Text",
        "category": "Advanced"
      }
    ]
  }
{% endschema %}
