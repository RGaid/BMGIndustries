<div class="siteheader" data-section-id="{{ section.id }}" data-section-type="header-section">
  
  <!-- show only on desktop -->
  <div class="medium--hide small--hide">
    <header role="banner">
      {%include 'promo'%}
      {%include 'headerbar'%}
      <div class="headernavigation">
              <div class="desktoplogo" itemscope itemtype="http://schema.org/Organization"  >
                <a href="/" itemprop="url" >
                  <img class="Image--lazyLoad Image--fadeIn" data-src="{{ 'BMG-CLOSEUP.jpg' | file_img_url: '150x' }}"  alt="{{ shop.name }}" itemprop="logo"> 
                </a>
              </div>
              {% include 'site-nav' with linklists[section.settings.menu] %}
              {% include 'search-bar'  %}   
        </div>
    </header>
  </div>

  <!-- show only on mobile -->
  <div class="post-large--hide">
    
      {%include 'promo' %}

      <div class="xwrapper  mobileheaderwrapper">
        <div class="grid">
          <div class="grid__item one-third  nopadding">
            <button type="button" class="mobile-nav-trigger js-drawer-open-left" aria-controls="NavDrawer" aria-expanded="true" style="height: 42px;">
              <div  id="mobileToggleIcon" aria-hidden="true">MENU </div>
              <div id="mobileToggleCloseIcon" aria-hidden="true" ></div>
            </button>            
          </div>
          <div class="grid__item one-third nopadding centeralign">
            <div class="mobilelogo">      
              <a href="/" itemprop="url" >
                <img class="Image--lazyLoad Image--fadeIn" data-src="{{ 'BMG-CLOSEUP.jpg' | file_img_url: '80x'  }}"  alt="{{ shop.name }}" itemprop="logo">
              </a>
            </div> 
          </div>
          <div class="grid__item one-third  nopadding">
            <a href="/cart" class="cart-page-link mobile-cart-page-link mobilecartval" >          
							<img class="Image--lazyLoad Image--fadeIn" data-src="{{ 'icon-cart.png' | asset_url }}">
              <div class="cartcount">{{ cart.item_count }}</div>
            </a>
          </div>
        </div>
      </div>



  </div>


</div>
{% include 'mobile-nav' with linklists[section.settings.menu] %}    

<div class="pushheader"></div>
<div id="atcheader" class="atcheader">
  <div class='content'>
      <span class="close">&times;</span> 
      <div class="atc-content">
        
          &nbsp;
        
      </div>
    </div>
</div>


{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "header",
        "content": "Announcement bar"
      },
      {
        "type": "checkbox",
        "id": "announcement_bar_enabled",
        "label": "Show announcement",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "announcement_bar_home_page_only",
        "label": "Show on home page only",
        "default": true
      },
      {
        "type": "text",
        "id": "announcement_bar_text",
        "label": "Announcement text",
        "default": "Announce something here"
      },
      {
        "type": "url",
        "id": "announcement_bar_link",
        "label": "Announcement link",
        "info": "Optional"
      },
      {
        "type": "header",
        "content": "Header"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logo_max_width",
        "min": 50,
        "max": 450,
        "step": 10,
        "unit": "px",
        "label": "Custom logo width",
        "default": 250
      },
      {
        "type": "link_list",
        "id": "menu",
        "label": "Menu",
        "default": "main-menu"
      }
    ]
  }
{% endschema %}

<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "Organization",
  "name": "{{ shop.name }}",
  
  "url": "{{ shop.url }}{{ page.url }}"
}
</script>

{% if template.name == 'index' %}
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "name": "{{ shop.name }}",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "{{ shop.url }}/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      },
      "url": "{{ shop.url }}{{ page.url }}"
    }
  </script>
{% endif %}